<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item android:drawable="@drawable/splash_background" />

    <!-- Aura Logo centered -->
    <item
        android:drawable="@drawable/aura_logo"
        android:gravity="center"
        android:width="150dp"
        android:height="150dp" />

    <!-- Budget text below logo -->
    <item android:gravity="center_horizontal|bottom"
        android:bottom="200dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Sparkle effects around logo -->
    <item android:gravity="center"
        android:left="100dp"
        android:top="100dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size android:width="4dp" android:height="4dp" />
        </shape>
    </item>

    <item android:gravity="center"
        android:right="120dp"
        android:top="80dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size android:width="3dp" android:height="3dp" />
        </shape>
    </item>

    <item android:gravity="center"
        android:left="80dp"
        android:bottom="120dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size android:width="2dp" android:height="2dp" />
        </shape>
    </item>

</layer-list>

